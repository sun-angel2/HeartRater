<Window x:Class="PulseLink.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:converters="clr-namespace:PulseLink.Converters"
        mc:Ignorable="d"
        d:DataContext="{d:DesignInstance Type=viewModels:MainViewModel, IsDesignTimeCreatable=True}"
        Title="{Binding Source={StaticResource LocalizedStrings}, Path=Strings.App_Title}"
        Height="450" Width="280"
        Background="{StaticResource GlassBg}" 
        WindowStyle="None" 
        AllowsTransparency="True"
        Topmost="True" 
        ResizeMode="NoResize" 
        MouseLeftButtonDown="Window_MouseDown">

    <Window.Resources>
        <!-- Jelly Button Style -->
        <Style x:Key="JellyButton" TargetType="Button">
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                        <GradientStop Color="#44FFFFFF" Offset="0.0" />
                        <GradientStop Color="#11FFFFFF" Offset="1.0" />
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#88FFFFFF"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="15">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background">
                                    <Setter.Value>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                            <GradientStop Color="#66FFFFFF" Offset="0.0" />
                                            <GradientStop Color="#33FFFFFF" Offset="1.0" />
                                        </LinearGradientBrush>
                                    </Setter.Value>
                                </Setter>
                                <Setter TargetName="border" Property="BorderBrush" Value="#CCFFFFFF"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background">
                                    <Setter.Value>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                            <GradientStop Color="#11FFFFFF" Offset="0.0" />
                                            <GradientStop Color="#00FFFFFF" Offset="1.0" />
                                        </LinearGradientBrush>
                                    </Setter.Value>
                                </Setter>
                                <Setter TargetName="border" Property="BorderBrush" Value="#44FFFFFF"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Window Symbol Button Style -->
        <Style x:Key="WindowSymbolButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#FFAAAAAA"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontFamily" Value="Marlett"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Width" Value="30"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" x:Name="border">
                            <TextBlock Text="{TemplateBinding Content}" VerticalAlignment="Center" HorizontalAlignment="Center" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#44FFFFFF"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#22FFFFFF"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Window Language Button Style -->
        <Style x:Key="WindowLanguageButton" TargetType="Button" BasedOn="{StaticResource WindowSymbolButton}">

        </Style>

        <!-- Converters -->
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
        <converters:InvertBooleanToVisibilityConverter x:Key="InvertBooleanToVisibilityConverter"  />
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Custom Title Bar -->
        <DockPanel Grid.Row="0" LastChildFill="False" Background="#11000000">
            <TextBlock Text="{Binding Source={StaticResource LocalizedStrings}, Path=Strings.App_Title}" 
                       Foreground="White" 
                       VerticalAlignment="Center"
                       Margin="10,0,0,0"
                       FontWeight="SemiBold"/>

            <StackPanel DockPanel.Dock="Right" Orientation="Horizontal">
                <Button Content="中" Style="{StaticResource WindowLanguageButton}" Command="{Binding SwitchLanguageCommand}" CommandParameter="zh-CN"/>
                <Button Content="EN" Style="{StaticResource WindowLanguageButton}" Command="{Binding SwitchLanguageCommand}" CommandParameter="en-US"/>
                <Button x:Name="PART_Minimize" Content="0" Style="{StaticResource WindowSymbolButton}" Click="Minimize_Click"/>
                <Button x:Name="PART_Tray" Content="1" Style="{StaticResource WindowSymbolButton}" Click="Tray_Click"/>
                <Button x:Name="PART_Close" Content="r" Style="{StaticResource WindowSymbolButton}" Click="Close_Click"/>
            </StackPanel>
        </DockPanel>

        <!-- Main Content -->
        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0" VerticalAlignment="Center">
                <TextBlock Text="{Binding Bpm}" 
                           Foreground="{StaticResource NeonGreen}" 
                           FontSize="90" 
                           FontWeight="Bold" 
                           HorizontalAlignment="Center"
                           FontFamily="Arial">
                    <TextBlock.Effect>
                        <DropShadowEffect Color="#00FF41" BlurRadius="25" ShadowDepth="0"/>
                    </TextBlock.Effect>
                </TextBlock>

                <TextBlock Text="{Binding Source={StaticResource LocalizedStrings}, Path=Strings.Label_Bpm}" Foreground="White" HorizontalAlignment="Center" FontSize="16" Opacity="0.6" Margin="0,-15,0,20"/>

                <TextBlock Text="{Binding Status}" Foreground="Gray" HorizontalAlignment="Center" FontSize="12" FontFamily="Consolas" Margin="10,0,10,20" TextWrapping="Wrap"/>
            </StackPanel>

            <!-- Device List / Connection Controls -->
            <StackPanel Grid.Row="1" VerticalAlignment="Center">
                <!-- Device List -->
                <ListBox ItemsSource="{Binding Devices}"
                         Visibility="{Binding IsConnected, Converter={StaticResource InvertBooleanToVisibilityConverter}}"
                         Height="120" 
                         Margin="0,10"
                         Background="Transparent" 
                         BorderThickness="0" 
                         ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Button Content="{Binding Name}" 
                                    Command="{Binding DataContext.ConnectCommand, RelativeSource={RelativeSource AncestorType=Window}}" 
                                    CommandParameter="{Binding Id}" 
                                    Style="{StaticResource JellyButton}"
                                    Width="180"
                                    Margin="0,4"/>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>

                <!-- Connection Buttons -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10">
                    <Button Content="{Binding Source={StaticResource LocalizedStrings}, Path=Strings.Button_Scan}"
                            Command="{Binding ScanCommand}"
                            Style="{StaticResource JellyButton}"
                            Margin="5,0"/>
                    <Button Content="{Binding Source={StaticResource LocalizedStrings}, Path=Strings.Button_Disconnect}"
                            Command="{Binding DisconnectCommand}"
                            Style="{StaticResource JellyButton}"
                            Margin="5,0"
                            Visibility="{Binding IsConnected, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                </StackPanel>
            </StackPanel>

            <!-- Ghost Mode and URLs -->
            <StackPanel Grid.Row="2" Margin="0,20,0,0">
                <Button Content="{Binding Source={StaticResource LocalizedStrings}, Path=Strings.Button_ToggleGhost}" 
                        Command="{Binding ToggleGhostModeCommand}"
                        Style="{StaticResource JellyButton}"
                        HorizontalAlignment="Center"/>

                <TextBox Text="{Binding LocalServerUrl}" 
                         Background="Transparent" 
                         Foreground="#777"
                         BorderThickness="0" 
                         FontSize="10" 
                         Margin="0,15,0,0" 
                         IsReadOnly="True"
                         TextAlignment="Center"
                         FontFamily="Consolas"/>

                <TextBlock Text="{Binding UserId, StringFormat='UserID: {0}'}"
                           Foreground="#777"
                           FontSize="10"
                           Margin="0,5,0,0"
                           HorizontalAlignment="Center"
                           FontFamily="Consolas"/>
                
                <TextBox Text="{Binding MqttStreamUrl}" 
                         Background="Transparent" 
                         Foreground="#777"
                         BorderThickness="0" 
                         FontSize="10" 
                         Margin="0,5,0,0" 
                         IsReadOnly="True"
                         TextAlignment="Center"
                         FontFamily="Consolas"/>

                <Button Content="刷新 GitHub Pages URL" 
                        Command="{Binding RefreshGithubPagesUrlCommand}"
                        Style="{StaticResource JellyButton}"
                        HorizontalAlignment="Center"
                        Margin="0,15,0,0"/>

                <TextBox Text="{Binding GitHubPagesUrl}" 
                         Background="Transparent" 
                         Foreground="#777"
                         BorderThickness="0" 
                         FontSize="10" 
                         Margin="0,5,0,0" 
                         IsReadOnly="True"
                         TextAlignment="Center"
                         FontFamily="Consolas"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>